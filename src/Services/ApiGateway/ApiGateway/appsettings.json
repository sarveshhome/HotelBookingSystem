{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/api/hotels/{**catch-all}"
        }
      },
      "rates-route": {
        "ClusterId": "rates-cluster",
        "Match": {
          "Path": "/api/rates/{**catch-all}"
        }
      },
      "booking-route": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/api/bookings/{**catch-all}"
        }
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      },
      "loyalty-route": {
        "ClusterId": "loyalty-cluster",
        "Match": {
          "Path": "/api/loyalty/{**catch-all}"
        }
      },
      "refund-route": {
        "ClusterId": "refund-cluster",
        "Match": {
          "Path": "/api/refunds/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "search-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "rates-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "booking-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "loyalty-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5007"
          }
        }
      },
      "refund-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5008"
          }
        }
      }
    }
  }
}
